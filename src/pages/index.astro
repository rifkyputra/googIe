---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<script>
	var countDownDate = new Date("Nov 8, 2024 15:37:25").getTime();
	var countdownSelector = document.getElementById("countdown");
	function startCountdown() {
		var now = new Date().getTime();
		var distance = countDownDate - now;
		var days = Math.floor(distance / (1000 * 60 * 60 * 24));
		var hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
		var minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
		var seconds = Math.floor((distance % (1000 * 60)) / 1000);
		if(!countdownSelector) return;
		countdownSelector.innerHTML = days + " days " + hours + " hours " + minutes + "m " + seconds + "s ";
		// if (distance < 0) {
		// 	clearInterval(timerId);
		// 	countdownSelector.innerHTML = "EXPIRED";
		// }
		
	}

	const countdown = setInterval(startCountdown, 1000);
	

</script>

